{{> message}}
<form action="/cruds/new" method="POST">
  <div class="container">
    <div class="necessary">
      <div class="title-necessary">*必填欄位</div>
      <div class="content-necessary">請輸入你的支出</div>
    </div>
    <div class="input-items">
      <label for="name">名稱* :</label>
      <input type="text" name="name" id="name" class="input-item" maxlength="20" value="{{name}}">
    </div>
    <div class="input-items">
      <label for="date">日期* :</label>
      <input type="date" name="date" id="date" value="{{date}}" class="input-item">
    </div>
    <div class="input-items">
      <label for="category">類別* :</label>
      <select name="categoryId" id="category" class="input-item">
        <option value="none" selected disabled hidden>Select</option>
        {{#each category}}
        <option value={{this._id}} name={{this.name}}>{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="input-items">
      <label for="amount">金額* :</label>
      <input type="number" name="amount" id="amount" class="input-item" value="{{amount}}"></select>
    </div>
    <div class="new-button-box">
      <button type="submit" class="new-button">新增支出</button>
    </div>
  </div>
</form>
<script>
  const alertMessage = document.querySelector('.alert-message')
  alertMessage.classList.add('alert-message-index')
</script>