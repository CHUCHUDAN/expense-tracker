<form action="/cruds/{{record._id}}?_method=PUT" method="POST">
  <div class="container">
    <div class="necessary">
      <div class="title-necessary">*必填欄位</div>
      <div class="content-necessary">請修改你的支出</div>
    </div>
    <div class="input-items">
      <label for="name">名稱* :</label>
      <input type="text" name="name" id="name" class="input-item" value='{{record.name}}'>
    </div>
    <div class="input-items">
      <label for="date">日期* :</label>
      <input type="date" name="date" id="date"  class="input-item" value="{{record.date}}">
    </div>
    <div class="input-items">
      <label for="category">類別* :</label>
      <select name="categoryId" id="category" class="input-item">
        <option value="none" selected disabled hidden>Select</option>
        {{#each selectedData}}
        <option value={{this._id}} name={{this.name}} selected>{{this.name}}</option>
        {{/each}}
        {{#each remindData}}
        <option value={{this._id}} name={{this.name}}>{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="input-items">
      <label for="amount">金額* :</label>
      <input name="amount" id="amount" class="input-item" value='{{record.amount}}'>
    </div>
    <div class="new-button-box">
      <button type="submit" class="new-button">送出</button>
    </div>
  </div>
</form>
